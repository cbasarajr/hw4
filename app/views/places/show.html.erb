<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
<% if @current_user %>
<div class="row">
<% for post in @posts %>
  <div class="col-md-4 col-sm-12">
        <h4>
      <% user = User.find_by({ "id" => post["user_id"] }) %>
          <% if user %>
            <%= user["username"] %>
          <% else %>
            anonymous
          <% end %>
        </h4>
    <h3><%= post["title"] %></h3>
    <h4><%= post["posted_on"] %></h4>
    <img src="<%= post["image"] %>" class="img-fluid">
    <p><%= post["description"] %></p>
    </div>

<% end %>

</div>
<div class ="mb-2">
    <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-success">New Post</a>
  </div>
<% else %> 
  <p>Please Login</p>
<%end%>
  
        <div class ="mt-2">
  <a href="/places" class= "btn btn-success">Back to All Places</a>
  </div>
</div>